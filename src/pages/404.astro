---
export const prerender = true;

import Layout from '../layouts/Layout.astro';

// Fetch brand data from Strapi for logo
let brandData = null;
let logoUrl = null;

try {
  const response = await fetch('http://localhost:1337/api/brands?populate=*');

  if (response.ok) {
    const data = await response.json();
    brandData = Array.isArray(data?.data) ? data?.data?.[0] : data?.data;

    // Get logo URL
    let logo = null;
    if (brandData?.Logo) {
      logo = brandData.Logo;
    } else if (brandData?.attributes?.Logo) {
      logo = brandData.attributes.Logo;
    }

    if (logo?.url) {
      logoUrl = logo.url.startsWith('http')
        ? logo.url
        : `http://localhost:1337${logo.url}`;
    }
  }
} catch (error) {
  console.log('Could not fetch brand data:', error);
}
