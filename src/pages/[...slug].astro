---
export const prerender = true;

import Layout from '../layouts/Layout.astro';

export async function getStaticPaths() {
  return [
    { params: { slug: undefined } }
  ];
}

const slugParams = Astro.params.slug ? Astro.params.slug.split('/') : [];
---

<Layout title="Page Not Found" description="The page you are looking for could not be found.">
  <div class="max-w-7xl mx-auto px-4 py-16 text-center">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">
      404 - Page Not Found
    </h1>
    <p class="text-lg text-gray-600 mb-8">
      The page you are looking for could not be found.
    </p>
    <a href="/" class="inline-flex items-center px-6 py-3 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg font-semibold transition-colors">
      Go Home
    </a>
  </div>
</Layout>
