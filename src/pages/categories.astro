---
import Layout from '../layouts/Layout.astro';

// Fetch product categories from Strapi
let categoriesData = [];
let apiError = null;

try {
  console.log('üöÄ Fetching product categories from Strapi');

  // Using the Product_Category content type
  const response = await fetch('http://localhost:1337/api/product-categories?populate=*&pagination[pageSize]=100');

  if (response.ok) {
    const data = await response.json();
    categoriesData = data?.data || [];
    console.log('‚úÖ Categories loaded:', categoriesData.length);
  } else {
    const errorData = await response.json();
    console.error('‚ùå Categories API Error:', errorData);
    apiError = errorData.error?.message || 'Failed to fetch categories';
  }
} catch (error) {
  console.error('‚ùå Error fetching categories:', error);
  apiError = error.message;
}
---

<Layout title="Product Categories - FLMintDeals" description="Browse cannabis products by category and type">
  <!-- Hero Section -->
  <div class="bg-gradient-to-br from-purple-800 via-purple-700 to-indigo-700 text-white py-16">
    <div class="px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-4">
          Product Categories
        </h1>
        <p class="text-xl lg:text-2xl text-purple-100 max-w-3xl mx-auto">
          Discover cannabis products organized by category and type
        </p>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto py-12">
    {categoriesData.length === 0 ? (
      <div class="text-center py-16">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
        <h3 class="mt-2 text-lg font-medium text-gray-900 dark:text-gray-100">No categories found</h3>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
          {apiError ? `Error: ${apiError}` : 'No product categories are available at this time.'}
        </p>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {categoriesData.map(category => (
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow group">
            {/* Category Image */}
            {category.attributes?.Image?.data?.attributes?.url && (
              <div class="relative h-48 overflow-hidden">
                <img
                  src={`http://localhost:1337${category.attributes.Image.data.attributes.url}`}
                  alt={category.attributes?.Name || category.attributes?.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
              </div>
            )}

            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
                {category.attributes?.Name || category.attributes?.title || 'Category Name'}
              </h3>

              {/* Description */}
              {category.attributes?.Description && (
                <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-3">
                  {category.attributes.Description}
                </p>
              )}

              {/* Product Count */}
              {category.attributes?.products?.data && (
                <div class="flex items-center mb-4">
                  <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                  </svg>
                  <span class="text-gray-600 dark:text-gray-300">
                    {category.attributes.products.data.length} product{category.attributes.products.data.length !== 1 ? 's' : ''}
                  </span>
                </div>
              )}

              {/* Category Type/Slug */}
              {category.attributes?.Slug && (
                <div class="mb-4">
                  <span class="inline-block bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 px-3 py-1 rounded-full text-sm font-medium">
                    {category.attributes.Slug}
                  </span>
                </div>
              )}

              {/* Active Status */}
              {category.attributes?.IsActive !== undefined && (
                <div class="mb-4">
                  <span class={`inline-block px-3 py-1 rounded-full text-sm font-medium ${
                    category.attributes.IsActive
                      ? 'bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200'
                      : 'bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200'
                  }`}>
                    {category.attributes.IsActive ? 'Active' : 'Inactive'}
                  </span>
                </div>
              )}

              <div class="flex space-x-2">
                {/* View Products Button */}
                <a
                  href={`/categories/${category.documentId}`}
                  class="flex-1 bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg text-center font-medium transition-colors"
                >
                  View Products
                </a>

                {/* Browse Button */}
                <a
                  href={`/products?category=${category.attributes?.Slug || category.documentId}`}
                  class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg font-medium transition-colors"
                >
                  Browse
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    )}

    <!-- Category Grid Alternative Layout for Large Numbers -->
    {categoriesData.length > 12 && (
      <div class="mt-16">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8 text-center">
          Quick Category Links
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
          {categoriesData.map(category => (
            <a
              href={`/categories/${category.documentId}`}
              class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-4 text-center hover:shadow-md transition-shadow group"
            >
              <div class="text-sm font-medium text-gray-900 dark:text-white group-hover:text-purple-600 dark:group-hover:text-purple-400">
                {category.attributes?.Name || category.attributes?.title || 'Category'}
              </div>
              {category.attributes?.products?.data && (
                <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                  {category.attributes.products.data.length} items
                </div>
              )}
            </a>
          ))}
        </div>
      </div>
    )}
  </div>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>