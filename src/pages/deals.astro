---
export const prerender = false;

import Layout from '../layouts/Layout.astro';

// Fetch locations data to display deals from all stores
let locationsData = [];
let apiError = null;

try {
  console.log('üöÄ Fetching locations for deals page');

  const locationsResponse = await fetch('http://localhost:1337/api/locations?populate=*&pagination[pageSize]=100');

  if (locationsResponse.ok) {
    const data = await locationsResponse.json();
    locationsData = data?.data || [];
    console.log('‚úÖ Locations loaded:', locationsData.length);
  } else {
    const errorData = await locationsResponse.json();
    console.error('‚ùå Locations API Error:', errorData);
    apiError = errorData.error?.message || 'Failed to fetch locations';
  }
} catch (error) {
  console.error('‚ùå Error fetching locations:', error);
  apiError = error.message;
}

// Filter active locations with deals capabilities
const dealsLocations = locationsData.filter(location =>
  location.is_active && (location.DutchieScript || location.Menu_url)
);
---

<Layout title="Deals - Cannabis Dispensary Specials | Mint Deals" description="Find the best cannabis deals and specials from dispensaries across Florida, Nevada, and Arizona.">
  <!-- Breadcrumb Navigation -->
  <div class="bg-gray-100 dark:bg-gray-800 py-4">
    <div class="px-4 sm:px-6 lg:px-8 max-w-[1600px] mx-auto">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm">
          <li>
            <a href="/" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">Home</a>
          </li>
          <li class="flex items-center">
            <svg class="w-4 h-4 mx-2 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-gray-900 dark:text-white font-medium">Deals</span>
          </li>
        </ol>
      </nav>
    </div>
  </div>

  <!-- Hero Section -->
  <div class="bg-gradient-to-br from-red-600 via-orange-500 to-yellow-500 text-white py-16">
    <div class="px-4 sm:px-6 lg:px-8 max-w-[1600px] mx-auto">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-4">
          üî• Cannabis Deals & Specials
        </h1>
        <p class="text-xl lg:text-2xl text-orange-100 max-w-3xl mx-auto">
          Discover the best deals and discounts from dispensaries near you
        </p>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="px-4 sm:px-6 lg:px-8 max-w-[1600px] mx-auto py-12">
    {dealsLocations.length === 0 ? (
      <div class="text-center py-16">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
        </svg>
        <h3 class="mt-2 text-lg font-medium text-gray-900 dark:text-gray-100">No deals available</h3>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
          {apiError ? `Error: ${apiError}` : 'No deals are currently available. Check back soon!'}
        </p>
        <div class="mt-6">
          <a
            href="/stores"
            class="inline-flex items-center px-4 py-2 bg-orange-600 hover:bg-orange-700 text-white rounded-lg font-medium transition-colors"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            Browse Locations
          </a>
        </div>
      </div>
    ) : (
      <div>
        <!-- Stats Section -->
        <div class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 rounded-lg mb-8">
          <div class="px-6 py-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
              <div>
                <div class="text-3xl font-bold text-orange-600">{dealsLocations.length}</div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Stores with Deals</div>
              </div>
              <div>
                <div class="text-3xl font-bold text-red-600">üî•</div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Hot Deals Available</div>
              </div>
              <div>
                <div class="text-3xl font-bold text-green-600">üí∞</div>
                <div class="text-sm text-gray-600 dark:text-gray-400">Save Money</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Locations with Deals -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {dealsLocations.map(location => (
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
              {/* Location Header */}
              <div class="bg-gradient-to-r from-orange-500 to-red-500 text-white p-6">
                <div class="flex items-center justify-between">
                  <div>
                    <h2 class="text-2xl font-bold mb-2">{location.Name}</h2>
                    {location.Address && (
                      <p class="text-orange-100">
                        {location.Address.city}, {location.Address.state}
                      </p>
                    )}
                  </div>
                  <div class="text-right">
                    <span class={`inline-block px-3 py-1 rounded-full text-sm font-semibold ${
                      location.is_active
                        ? 'bg-green-500 text-white'
                        : 'bg-gray-500 text-white'
                    }`}>
                      {location.is_active ? 'üü¢ Open' : 'üî¥ Closed'}
                    </span>
                  </div>
                </div>
              </div>

              {/* Location Content */}
              <div class="p-6">
                {location.Description && (
                  <p class="text-gray-600 dark:text-gray-300 mb-4">
                    {location.Description}
                  </p>
                )}

                {/* Quick Info */}
                <div class="grid grid-cols-2 gap-4 mb-6">
                  {location.Phone && (
                    <div class="flex items-center">
                      <svg class="w-4 h-4 mr-2 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                      </svg>
                      <span class="text-sm text-gray-600 dark:text-gray-300">{location.Phone}</span>
                    </div>
                  )}

                  {location.over21 && (
                    <div class="flex items-center">
                      <span class="text-sm bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200 px-2 py-1 rounded">
                        21+ Required
                      </span>
                    </div>
                  )}
                </div>

                {/* Action Buttons */}
                <div class="grid grid-cols-2 gap-3">
                  <a
                    href={`/location/${location.Slug}/deals`}
                    class="bg-orange-600 hover:bg-orange-700 text-white px-4 py-3 rounded-lg text-center font-medium transition-colors"
                  >
                    üî• View Deals
                  </a>
                  <a
                    href={`/location/${location.Slug}`}
                    class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-3 rounded-lg text-center font-medium transition-colors"
                  >
                    üìç Store Info
                  </a>
                </div>

                {/* Quick Links */}
                <div class="flex space-x-2 mt-4">
                  {location.Menu_url && (
                    <a
                      href={location.Menu_url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex-1 text-center bg-green-100 dark:bg-green-900 text-green-700 dark:text-green-300 px-3 py-2 rounded text-sm hover:bg-green-200 dark:hover:bg-green-800 transition-colors"
                    >
                      Menu
                    </a>
                  )}
                  {location.Online_order_URL && (
                    <a
                      href={location.Online_order_URL}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex-1 text-center bg-purple-100 dark:bg-purple-900 text-purple-700 dark:text-purple-300 px-3 py-2 rounded text-sm hover:bg-purple-200 dark:hover:bg-purple-800 transition-colors"
                    >
                      Order
                    </a>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- Call to Action -->}
        <div class="mt-16 bg-gradient-to-r from-orange-50 to-red-50 dark:from-gray-800 dark:to-gray-700 rounded-lg p-8 text-center">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
            Don't Miss Out on Great Deals!
          </h2>
          <p class="text-gray-600 dark:text-gray-300 mb-6 max-w-2xl mx-auto">
            Check individual store pages for the latest deals, specials, and promotions. Deals change frequently, so visit often!
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a
              href="/stores"
              class="bg-orange-600 hover:bg-orange-700 text-white px-6 py-3 rounded-lg font-medium transition-colors"
            >
              Browse All Locations
            </a>
            <a
              href="/categories"
              class="bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg font-medium transition-colors"
            >
              Shop by Category
            </a>
          </div>
        </div>
      </div>
    )}
  </div>
</Layout>