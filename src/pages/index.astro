---
import Layout from '../layouts/Layout.astro';
import { strapi } from '../lib/strapi';

let strapiStatus = 'Not connected';
let strapiUrl = import.meta.env.PUBLIC_STRAPI_URL;

// Category icon mapping
function getCategoryIcon(slug) {
  const icons = {
    'flower': '🌿',
    'pre-rolls': '🚬',
    'vaporizers': '💨',
    'concentrates': '🍯',
    'edibles': '🍭',
    'topicals': '🧴',
    'cartridges': '🖊️'
  };
  return icons[slug] || '🌿';
}

// Initialize data arrays
let deals = [];
let stores = [];
let categories = [];
let apiError = null;

try {
  console.log('🚀 Starting API data fetch');

  // Fetch all data in parallel using correct endpoint names
  const [locationsResponse, regionsResponse, categoriesResponse] = await Promise.allSettled([
    strapi.getMany('/locations', { populate: '*', pagination: { pageSize: 6 } }),
    strapi.getMany('/region', { populate: '*', pagination: { pageSize: 6 } }),
    strapi.getMany('/product-categories', { populate: '*', sort: 'Name:asc', pagination: { pageSize: 8 } })
  ]);

  strapiStatus = 'Connected';

  // Process locations (stores)
  if (locationsResponse.status === 'fulfilled' && locationsResponse.value?.data?.length > 0) {
    stores = locationsResponse.value.data.map(location => ({
      id: location.id,
      documentId: location.documentId,
      name: location.attributes?.Name || location.attributes?.title || '',
      address: location.attributes?.Address || '',
      city: location.attributes?.City || '',
      state: location.attributes?.State || 'FL',
      phone: location.attributes?.Phone || '',
      hours: location.attributes?.Hours || '',
      slug: location.attributes?.Slug || location.documentId,
      image: location.attributes?.StoreImage?.data?.attributes?.url
        ? `http://localhost:1337${location.attributes.StoreImage.data.attributes.url}`
        : null,
      publishedAt: location.attributes?.publishedAt
    })).filter(store => store.name && store.publishedAt);
  }

  // Process regions - but we'll use them differently
  let regions = [];
  if (regionsResponse.status === 'fulfilled' && regionsResponse.value?.data?.length > 0) {
    regions = regionsResponse.value.data.map(region => ({
      id: region.id,
      documentId: region.documentId,
      name: region.attributes?.Name || '',
      description: region.attributes?.Description || '',
      image: region.attributes?.RegionImage?.data?.attributes?.url
        ? `http://localhost:1337${region.attributes.RegionImage.data.attributes.url}`
        : null,
      publishedAt: region.attributes?.publishedAt
    })).filter(region => region.name && region.publishedAt);
  }

  // Process product categories
  if (categoriesResponse.status === 'fulfilled' && categoriesResponse.value?.data?.length > 0) {
    categories = categoriesResponse.value.data.map(category => ({
      id: category.id,
      documentId: category.documentId,
      title: category.attributes?.Name || '',
      description: category.attributes?.Description || '',
      slug: category.attributes?.Slug || category.documentId,
      icon: getCategoryIcon(category.attributes?.Slug),
      image: category.attributes?.Image?.data?.attributes?.url
        ? `http://localhost:1337${category.attributes.Image.data.attributes.url}`
        : null,
      publishedAt: category.attributes?.publishedAt
    })).filter(category => category.title && category.publishedAt);
  }

  // For now, deals will be empty until you create a deals content type
  deals = [];
} catch (error) {
  console.log('💥 DEBUG: Error occurred:', error);
  strapiStatus = 'Disconnected - Cannot connect to backend';
  apiError = error.name === 'AbortError' ? 'Connection timeout' : error.message;

  // No fallback data - only show content from database
  deals = [];
  stores = [];
  categories = [];
}
---

