---
// REMOVED prerender and getStaticPaths - this page now renders on-demand with KV caching
// This prevents build timeouts from fetching Dutchie data for 32+ locations

import Layout from '../../../layouts/Layout.astro';
import { fetchStoreSpecials } from '../../../lib/dutchie-utils';

const { locationSlug } = Astro.params;
const API_BASE = 'https://mintdealsbackend-production.up.railway.app/api';

let store = null;
let specials = [];
let apiError = null;

try {
  console.log('üî• Fetching store deals for:', locationSlug);

  // Fetch store data
  const storeResponse = await fetch(`${API_BASE}/stores?filters[slug][$eq]=${locationSlug}&populate=region`);

  if (storeResponse.ok) {
    const data = await storeResponse.json();
    if (data?.data?.length > 0) {
      const storeData = data.data[0];

      store = {
        id: storeData.id,
        documentId: storeData.documentId,
        name: storeData.name || 'Unnamed Store',
        slug: storeData.slug || storeData.documentId,
        description: storeData.description,
        phone: storeData.phone,
        email: storeData.email,
        address: storeData.address?.street || storeData.address,
        city: storeData.address?.city || storeData.city || 'Unknown City',
        state: storeData.address?.state || storeData.state || 'Unknown State',
        zipCode: storeData.address?.zipCode || storeData.zip_code,
        latitude: storeData.latitude,
        longitude: storeData.longitude,
        is_active: storeData.is_active !== false,
        timezone: storeData.timezone,
        dutchieStoreID: storeData.DutchieStoreID,
        menuUrl: storeData.menu_url,
        onlineOrderingUrl: storeData.online_ordering_url,
        region: storeData.region
      };

      console.log('‚úÖ Store found:', store.name);

      // Fetch specials from Dutchie if we have a store ID (with KV caching and timeout)
      if (store.dutchieStoreID) {
        specials = await fetchStoreSpecials(store.dutchieStoreID, store.name, Astro.locals);
      }
    } else {
      console.log('‚ùå Store not found:', locationSlug);
      return Astro.redirect('/stores', 302);
    }
  } else {
    console.error('‚ùå Store API Error');
    return Astro.redirect('/stores', 302);
  }
} catch (error) {
  console.error('‚ùå Error fetching store data:', error);
  apiError = error.message;
  return Astro.redirect('/stores', 302);
}

const pageTitle = store ? `${store.name} - Deals & Specials` : 'Store Deals';
const pageDescription = store ?
  `Find the best cannabis deals and specials at ${store.name} in ${store.city}, ${store.state}.` :
  'Cannabis deals and specials';
---

<style>
  .video-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    pointer-events: none;
    z-index: 1;
  }
  .video-background video {
    object-fit: cover;
    height: 100%;
    width: 100%;
  }
  .content-wrapper {
    position: relative;
    z-index: 1;
    background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.5));
  }
</style>

<Layout title={pageTitle} description={pageDescription}>
  <!-- Video Background -->
  <div class="video-background">
    <video autoplay loop muted playsinline>
      <source src="https://video.wixstatic.com/video/d47472_58cce06729c54ccb935886c4b3647274/1080p/mp4/file.mp4" type="video/mp4">
    </video>
  </div>

  <!-- Content Wrapper -->
  <div class="content-wrapper">
    {store && (
      <div>
        <!-- Hero Section -->
        <div class="bg-gradient-to-r from-green-900 via-green-800 to-yellow-700 text-white py-12">
          <div class="px-4 sm:px-6 lg:px-8 max-w-[2080px] mx-auto">
            <div class="text-center">
              <h1 class="text-4xl md:text-5xl font-bold mb-4 drop-shadow-2xl">
                üî• {store.name} Deals
              </h1>

              {store.city && (
                <p class="text-xl text-yellow-400 mb-6 drop-shadow-lg">
                  {store.city}, {store.state}
                </p>
              )}

              <div class="flex flex-wrap justify-center gap-4 mb-8">
                <a
                  href={`/location/${locationSlug}`}
                  class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors shadow-lg"
                >
                  üìç Store Info
                </a>

                {store.onlineOrderingUrl && (
                  <a
                    href={store.onlineOrderingUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="bg-yellow-500 hover:bg-yellow-600 text-black px-6 py-3 rounded-lg font-semibold transition-colors shadow-lg"
                  >
                    üõí Order Online
                  </a>
                )}
              </div>
            </div>
          </div>
        </div>

        <!-- Quick Stats Bar -->
        <div class="bg-gradient-to-r from-green-800 via-green-900 to-green-800 py-3">
          <div class="px-4 mx-auto sm:px-6 lg:px-8 max-w-[2080px]">
            <div class="grid grid-cols-2 gap-6 text-center md:grid-cols-3">
              <div class="text-white">
                <div class="text-xl font-bold text-yellow-400">{specials.length}</div>
                <div class="text-xs text-green-200">Active Deals</div>
              </div>
              {store.phone && (
                <div class="text-white">
                  <a href={`tel:${store.phone}`} class="block hover:text-yellow-400 transition-colors">
                    <div class="text-xl font-bold text-yellow-400">üìû Call</div>
                    <div class="text-xs text-green-200">{store.phone}</div>
                  </a>
                </div>
              )}
              {store.is_active ? (
                <div class="text-white">
                  <div class="text-xl font-bold text-green-400">üü¢ Open</div>
                  <div class="text-xs text-green-200">Now Accepting Orders</div>
                </div>
              ) : (
                <div class="text-white">
                  <div class="text-xl font-bold text-red-400">üî¥ Closed</div>
                  <div class="text-xs text-green-200">Check Back Soon</div>
                </div>
              )}
            </div>
          </div>
        </div>

        <!-- Main Content -->
        <div class="bg-black py-12 min-h-screen">
          <div class="px-4 sm:px-6 lg:px-8 max-w-[2080px] mx-auto">

            {specials.length > 0 ? (
              <div>
                <div class="mb-8 text-center">
                  <h2 class="text-3xl font-bold text-white mb-2">üéØ Current Deals & Specials</h2>
                  <p class="text-gray-300">Limited time offers - shop now and save!</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-6">
                  {specials.map(product => {
                    const variant = product.variants?.[0];
                    const regularPrice = variant?.pricingTierData?.[0]?.price || 0;
                    const specialPrice = variant?.specialPriceCents ? variant.specialPriceCents / 100 : regularPrice;
                    const discount = regularPrice && specialPrice < regularPrice ?
                      Math.round(((regularPrice - specialPrice) / regularPrice) * 100) : 0;
                    const imageUrl = product.images?.[0]?.url || '';

                    return (
                      <div class="bg-gray-900 rounded-lg shadow-lg overflow-hidden border border-green-700 hover:border-yellow-500 transition-all">
                        {/* Discount Badge */}
                        {discount > 0 && (
                          <div class="absolute top-0 right-0 bg-red-600 text-white px-3 py-1 text-sm font-bold rounded-bl-lg z-10">
                            {discount}% OFF
                          </div>
                        )}

                        {/* Product Image */}
                        {imageUrl ? (
                          <img src={imageUrl} alt={product.name} class="w-full h-48 object-cover" />
                        ) : (
                          <div class="w-full h-48 bg-gradient-to-br from-green-600 to-green-800 flex items-center justify-center">
                            <span class="text-6xl">
                              {product.category === 'Flower' ? 'üåø' :
                               product.category === 'Concentrates' ? 'üíé' :
                               product.category === 'Edibles' ? 'üç≠' :
                               product.category === 'Pre-Rolls' ? 'üö¨' : 'üå±'}
                            </span>
                          </div>
                        )}

                        {/* Product Info */}
                        <div class="p-6">
                          <div class="mb-2">
                            <span class="inline-block bg-green-900 text-green-200 px-2 py-1 rounded text-xs font-semibold">
                              {product.category}
                            </span>
                            {product.strainType && (
                              <span class="inline-block bg-yellow-900 text-yellow-200 px-2 py-1 rounded text-xs font-semibold ml-1">
                                {product.strainType}
                              </span>
                            )}
                          </div>

                          <h3 class="text-lg font-bold text-white mb-1">{product.name}</h3>
                          {product.brandName && (
                            <p class="text-sm text-gray-400 mb-3">by {product.brandName}</p>
                          )}

                          {/* Potency */}
                          {(product.potencyThc?.formatted || product.potencyCbd?.formatted) && (
                            <div class="flex gap-2 mb-3 text-xs">
                              {product.potencyThc?.formatted && (
                                <span class="bg-gray-800 text-green-400 px-2 py-1 rounded">
                                  THC: {product.potencyThc.formatted}
                                </span>
                              )}
                              {product.potencyCbd?.formatted && (
                                <span class="bg-gray-800 text-blue-400 px-2 py-1 rounded">
                                  CBD: {product.potencyCbd.formatted}
                                </span>
                              )}
                            </div>
                          )}

                          {/* Pricing */}
                          <div class="mb-4">
                            {discount > 0 ? (
                              <div>
                                <div class="text-gray-400 line-through text-sm">
                                  ${regularPrice.toFixed(2)}
                                </div>
                                <div class="text-2xl font-bold text-yellow-400">
                                  ${specialPrice.toFixed(2)}
                                </div>
                                <div class="text-green-400 text-sm font-semibold">
                                  Save ${(regularPrice - specialPrice).toFixed(2)}!
                                </div>
                              </div>
                            ) : (
                              <div class="text-2xl font-bold text-yellow-400">
                                ${specialPrice.toFixed(2)}
                              </div>
                            )}
                          </div>

                          {/* Variant Info */}
                          {variant?.option && (
                            <div class="text-sm text-gray-400 mb-4">
                              {variant.option}
                            </div>
                          )}

                          {/* Order Button */}
                          {store.onlineOrderingUrl ? (
                            <a
                              href={store.onlineOrderingUrl}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="block w-full bg-gradient-to-r from-yellow-500 to-yellow-600 hover:from-yellow-600 hover:to-yellow-700 text-black font-semibold py-3 px-4 rounded-lg transition-all text-center shadow-lg"
                            >
                              üõí Order Now
                            </a>
                          ) : (
                            <a
                              href={`tel:${store.phone}`}
                              class="block w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-4 rounded-lg transition-all text-center"
                            >
                              üìû Call to Order
                            </a>
                          )}
                        </div>
                      </div>
                    );
                  })}
                </div>
              </div>
            ) : (
              <div class="text-center py-16">
                <div class="bg-gray-900 rounded-lg p-12 border border-green-700">
                  <div class="text-6xl mb-4">üî•</div>
                  <h3 class="text-2xl font-bold text-white mb-4">No Active Deals Right Now</h3>
                  <p class="text-gray-300 mb-6">
                    Check back soon or call the store for current specials!
                  </p>
                  <div class="flex flex-wrap justify-center gap-4">
                    {store.phone && (
                      <a
                        href={`tel:${store.phone}`}
                        class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors"
                      >
                        üìû Call for Deals
                      </a>
                    )}
                    {store.onlineOrderingUrl && (
                      <a
                        href={store.onlineOrderingUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="bg-yellow-500 hover:bg-yellow-600 text-black px-6 py-3 rounded-lg font-semibold transition-colors"
                      >
                        üõí Browse Menu
                      </a>
                    )}
                  </div>
                </div>
              </div>
            )}

            <!-- Store Info Section -->
            <div class="mt-12 bg-gradient-to-r from-green-900 via-green-800 to-yellow-700 rounded-3xl p-8 text-white shadow-lg">
              <h3 class="text-2xl font-bold mb-6 text-center">üìç Store Information</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {store.address && (
                  <div class="flex items-start">
                    <svg class="w-6 h-6 mr-3 text-yellow-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <div>
                      <div class="font-semibold text-yellow-400">Address</div>
                      <div class="text-green-100">{store.address}</div>
                      <div class="text-green-100">{store.city}, {store.state} {store.zipCode}</div>
                    </div>
                  </div>
                )}

                {store.phone && (
                  <div class="flex items-start">
                    <svg class="w-6 h-6 mr-3 text-yellow-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    <div>
                      <div class="font-semibold text-yellow-400">Phone</div>
                      <a href={`tel:${store.phone}`} class="text-green-100 hover:text-yellow-400 transition-colors">
                        {store.phone}
                      </a>
                    </div>
                  </div>
                )}
              </div>

              <div class="mt-6 pt-6 border-t border-green-700 text-center">
                <p class="text-sm text-green-200 mb-4">
                  üí° Deals subject to availability. Valid ID required. Must be 21+
                </p>
                <div class="flex flex-wrap justify-center gap-4">
                  <a href="/all-store-specials" class="bg-yellow-500 text-black hover:bg-yellow-600 font-semibold py-2 px-6 rounded-lg transition-colors">
                    üî• All Store Specials
                  </a>
                  <a href="/stores" class="border-2 border-yellow-400 text-white hover:bg-yellow-400 hover:text-black font-semibold py-2 px-6 rounded-lg transition-colors">
                    üè™ All Locations
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    )}
  </div>
</Layout>
