                  {region.cities.map(city => (
                    <div class="p-4 transition-all bg-gray-900 border-2 border-green-700 rounded-lg hover:shadow-lg hover:shadow-yellow-400/20" style="border-image: linear-gradient(to right, rgb(251, 191, 36), rgb(249, 115, 22)) 1;">
